#!/usr/bin/env bash
#
# restartServices
# Simple wrapper to restart Apache and PHP FPM services; this can be specified in sudoers file as specifically allowed.
#

set -e
set -u

if [ $(id -u) -ne 0 ]; then
    sudo $(readlink -f "bin/restartServices")
    exit
fi

service apache2 restart
service php5-fpm restart
